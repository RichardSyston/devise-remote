<div class="jumbotron">
  <h2>Sign up</h2>


  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      <div class="field_with_errors">
        <%= "Email #{resource.errors.messages[:email][0]}" if resource.errors.messages[:email] != [] %>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label :userame %><br />
      <%= f.text_field :username, autocomplete: "username", class: "form-control" %>
    </div>

    <% if f.object.password_required? %>
      <div class="field form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        <div class="field_with_errors">
          <%= "Password #{resource.errors.messages[:password][0]}" if resource.errors.messages[:password] != [] %>
        </div>
      </div>
      <small id="passwordHelpInline" class="text-muted">
      Must be 6-20 characters long.
    </small>

      <div class="field form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        <div class="field_with_errors">
          <%= "Password confirmation #{resource.errors.messages[:password_confirmation][0]}" if resource.errors.messages[:password_confirmation] != [] %>
        </div>
      </div>
    <% end %>

    <div class="actions form-group">
      <%= f.submit "Sign up", class: "btn btn-info btn-lg" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>  